<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="<%= @keywords if @keywords %>" />
    <meta name="title" content="<%= @title if @title %>" />

    <title>YourApp <%= ' - ' + @title if @title %></title>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'custom_as_default', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>



<body>

  <div class="wrapper">

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button aria-controls="navbar" aria-expanded="true" data-target="#navbar" data-toggle="collapse" class="navbar-toggle" type="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="#" class="navbar-brand">YourApp</a>
        </div>
        <div class="navbar-collapse collapse" id="navbar" aria-expanded="true" style="">
          <ul class="nav navbar-nav">
            <li>
                <a href="/admin">admin</a>
            </li>
          </ul>


          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li>
                <a href="/users/<%= current_user.username %>" title="">
                    <%= current_user.username %>
                </a>
            </li>
            <li>
                <%= link_to t('logout'), '/users/sign_out', :method => :delete %>
            </li>
            <% else %>
              <li>
                <a href="/users/sign_in" title="<%= t('login') %>"><%= t('login') %></a>
              </li>
              <li>
                <a href="/users/sign_up" title="<%= t('register') %>"><%= t('register') %></a>
              </li>
            <% end %>

          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>




    <%= render 'layouts/messages' %>



    <!-- Page Content -->
    <div class="container" style="min-height: 360px; margin-bottom: 20px;">

        <%= yield %>

    </div>
    <!-- /.container -->


    <div class="container">
        <!-- Footer -->
        <footer>
            <div class="row well">
                <div class="col-lg-12">
                    <p>
                      <span>Copyright &copy; 2014</span>
                      <span class="pull-right">
                        <a href="" class="mr-10"></a>
                        <a href=""></a>
                      </span>
                    </p>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </footer>

    </div>
    <!-- /.container -->


  </div>


</body>
</html>
