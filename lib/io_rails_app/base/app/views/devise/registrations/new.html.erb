

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>

        <%#= f.error_notification %>

        <%= devise_error_messages! %>


        <div class="form-group">
              
          <label class="control-label" for="email">
            <span>
              Email
            </span>
          </label>
          
          <div class="controls">
            <input type="email" id="inputEmail" name="user[email]" class="form-control" placeholder="Email address" required autofocus>
          </div>
        </div>
        
        <div class="form-group">
          
          <label class="control-label" for="username">
            <span>
              Username
            </span>
          </label>
          
          <div class="controls">
            <input type="text" id="inputUsername" name="user[username]" class="form-control" placeholder="Username" required>
          </div>
        </div>




        <div class="form-group">
              
          <label class="control-label" for="password">
            <span>
              Password
            </span>
          </label>
          
          <div class="controls">
            <input type="password" id="inputPassword" name="user[password]" class="form-control" placeholder="Password" required>
          </div>
        </div>



        <div class="form-group">
              
          <label class="control-label" for="password">
            <span>
              Password
            </span>
          </label>
          
          <div class="controls">
            <input type="password" id="inputPassword" name="user[password_confirmation]" class="form-control" placeholder="Password" required>
          </div>
        </div>



        <div>
          <input type="submit" value="<%= t('register') %>" name="commit" class="btn btn-lg btn-primary">
        </div>

      <% end %>

    </div>



    <div class="col-md-4 col-md-offset-2">
      <h5>
        Already have an account?
      </h5>
      <p>
        <a href="/users/sign_in" class="btn btn-success">
          Sign in!
        </a>
      </p>
    </div>

  </div>


</div>









