

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">

      <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form'} do |f| %>

          <h3>注册新用户</h3>

          <%= f.input :email, label: '邮件地址', hint: '格式：user@domain.com', required: true %>

          <%= f.input :username, label: '用户名', hint: '4-20个小写英文字母、数字或下划线', autofocus: true, required: true, :class => 'form-control' %>
          
          <%= f.input :password, label: '密码', hint: '至少8个字符', required: true %>

          <%= f.input :password_confirmation, label: '密码确认', hint: '重复输入一次密码', required: true %>

          <%= f.button :submit, t('register'), :class => 'btn btn-primary btn-lg' %>

      <% end %>

    </div>



    <div class="col-md-4 col-md-offset-2">
      <h5>
        Already have an account?
      </h5>
      <p>
        <a href="/users/sign_in" class="btn btn-success">
          Sign in!
        </a>
      </p>
    </div>

  </div>


</div>









