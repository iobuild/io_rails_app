



<div class="panel panel-default">

    <div class="panel-heading"><strong><%= t('register') %></strong></div>

    <div class="panel-body">


    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>

        <%#= f.error_notification %>

        <%= devise_error_messages! %>

 
        <input type="email" id="inputEmail" name="user[email]" class="form-control" placeholder="Email address" aria-required="true" required autofocus>

        <input type="text" id="inputUsername" name="user[username]" class="form-control" placeholder="Username" aria-required="true" required autofocus>

        <input type="password" id="inputPassword" name="user[password]" class="form-control" placeholder="Password" aria-required="true" required>

        <input type="password" id="inputPassword" name="user[password_confirmation]" class="form-control" placeholder="Password" aria-required="true" required>

        
        <input type="submit" value="<%= t('register') %>" name="commit" class="btn btn-lg btn-primary btn-block">
        <% end %>


        <%= render "devise/shared/links" %>



    </div>




</div>








